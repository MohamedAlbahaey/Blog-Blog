<%- include("partials/header.ejs")  %>

    <div class="container d-flex justify-content-center mt-4">
        <h1>Recent Posts</h1>
    </div>
    
    <div class="container d-flex flex-column mb-3" style="width: 80%;">
            <% for(let i = 0; i < titles.length; i++) { %>
                <div class="card m-3">
                    <div class="card-body d-flex flex-column align-items-start"> 
                            <h3 class="card-title"> <%= titles[i] %> </h3>
                            <p class="card-text mb-auto"> <%= texts[i].substring(0,100) %></p>
                        <div>
                            <button type="button" class="btn btn-bd-primary btn-sm px-2 gap-3 mt-2">
                                Read More 
                            </button>
                            <img class="ms-3 mt-2" src="images/pencil-square.svg" />
                            <a href="/posts/delete/<%=i%>">
                                <img class="ms-2 mt-2" src="images/trash-fill.svg" />
                            </a>
                        </div>
                    </div>
                </div>
            <%}; %>
    </div>

    

<%- include("partials/footer.ejs")  %>